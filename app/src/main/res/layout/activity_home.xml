<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background_home">

        <!-- ScrollView for main content -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomActionSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Red Header Section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/headerSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_background_red"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="24dp">

                    <!-- App Title -->
                    <LinearLayout
                        android:id="@+id/llAppTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ladybug_pixel"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/joulebug"
                            android:textSize="30sp"
                            android:textColor="@color/pixel_white"
                            android:fontFamily="@font/pixelzone_0v6y4"
                            android:textStyle="bold"
                            android:shadowColor="@color/pixel_black"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="0"
                            android:letterSpacing="0.02"/>
                    </LinearLayout>

                    <!-- User Profile Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvUserProfile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/pixel_white"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="8dp"
                        app:layout_constraintTop_toBottomOf="@id/llAppTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/border_black_thick">

                            <ImageView
                                android:id="@+id/ivUserAvatar"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/avatar_placeholder"
                                android:background="@color/bg_cream"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvGreeting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hi Player!"
                                    android:textSize="20sp"
                                    android:textColor="@color/pixel_black"
                                    android:fontFamily="@font/pixelzone_0v6y4"
                                    android:textStyle="bold"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/lv_8"
                                        android:textSize="8sp"
                                        android:textColor="@color/pixel_black"
                                        android:fontFamily="@font/snowbell_wp4g9"
                                        android:textStyle="bold"
                                        android:background="@color/pixel_yellow"
                                        android:paddingStart="4dp"
                                        android:paddingEnd="4dp"
                                        android:paddingTop="2dp"
                                        android:paddingBottom="2dp"/>

                                    <ProgressBar
                                        android:id="@+id/pbXP"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="12dp"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="8dp"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:progressDrawable="@drawable/progress_bar_xp"
                                        android:max="100"
                                        android:progress="81"/>

                                    <TextView
                                        android:id="@+id/tvXP"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="810"
                                        android:textSize="8sp"
                                        android:textColor="@color/pixel_black"
                                        android:fontFamily="@font/snowbell_wp4g9"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="STREAK"
                                        android:textSize="8sp"
                                        android:textColor="@color/text_secondary"
                                        android:fontFamily="@font/snowbell_wp4g9"/>

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/ic_fire"
                                        android:layout_marginStart="4dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="D1"
                                        android:textSize="8sp"
                                        android:textColor="@color/pixel_black"
                                        android:fontFamily="@font/snowbell_wp4g9"
                                        android:textStyle="bold"
                                        android:layout_marginStart="2dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Hamburger Menu -->
                    <ImageButton
                        android:id="@+id/btnMenu"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_menu"
                        android:background="@drawable/button_red_pixel"
                        android:contentDescription="Menu"
                        android:padding="8dp"
                        app:layout_constraintTop_toTopOf="@id/cvUserProfile"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Stats Cards -->
                    <LinearLayout
                        android:id="@+id/statsLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/cvUserProfile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/pixel_yellow"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center"
                                android:background="@drawable/border_black_medium">

                                <TextView
                                    android:id="@+id/tvTasksCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="153"
                                    android:textSize="20sp"
                                    android:textColor="@color/pixel_black"
                                    android:fontFamily="@font/snowbell_wp4g9"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TASKS"
                                    android:textSize="7sp"
                                    android:textColor="@color/pixel_black"
                                    android:fontFamily="@font/snowbell_wp4g9"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="#64B5F6"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center"
                                android:background="@drawable/border_black_medium">

                                <TextView
                                    android:id="@+id/tvBadgesClimbed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="21"
                                    android:textSize="20sp"
                                    android:textColor="@color/pixel_black"
                                    android:fontFamily="@font/snowbell_wp4g9"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BADGES"
                                    android:textSize="7sp"
                                    android:textColor="@color/pixel_black"
                                    android:fontFamily="@font/snowbell_wp4g9"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#AED581"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center"
                                android:background="@drawable/border_black_medium">

                                <TextView
                                    android:id="@+id/tvRank"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#118"
                                    android:textSize="20sp"
                                    android:textColor="@color/pixel_black"
                                    android:fontFamily="@font/snowbell_wp4g9"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RANK"
                                    android:textSize="7sp"
                                    android:textColor="@color/pixel_black"
                                    android:fontFamily="@font/snowbell_wp4g9"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Mission Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvMissionSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/pixel_white"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border_black_thick">

                        <LinearLayout
                            android:id="@+id/headerMission"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/sdg_background"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_target"
                                app:tint="@color/pixel_green"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="OUR MISSION"
                                android:textSize="28sp"
                                android:textColor="@color/pixel_green"
                                android:fontFamily="@font/pixelzone_0v6y4"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"/>

                            <ImageView
                                android:id="@+id/ivMissionDropdownArrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_down"
                                app:tint="@color/pixel_green"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llMissionContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@color/bg_light_green"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Together, we're building sustainable cities!"
                                android:textSize="11sp"
                                android:textColor="@color/pixel_black"
                                android:fontFamily="@font/worksans_regular"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Daily Tasks -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDailyTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/pixel_white"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border_black_thick">

                        <LinearLayout
                            android:id="@+id/headerDailyTasks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/pixel_red"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="DAILY TASKS"
                                android:textSize="24sp"
                                android:textColor="@color/pixel_white"
                                android:fontFamily="@font/pixelzone_0v6y4"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvDailyProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/10"
                                android:textSize="12sp"
                                android:textColor="@color/pixel_white"
                                android:fontFamily="@font/snowbell_wp4g9"
                                android:textStyle="bold"/>

                            <ImageView
                                android:id="@+id/ivDropdownArrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_down"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llDailyTasksContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@color/pixel_yellow"
                            android:visibility="gone"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Weekly Tasks -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/headerWeeklyTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/pixel_white"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border_black_thick">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/pixel_green"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="WEEKLY TASKS"
                                android:textSize="24sp"
                                android:textColor="@color/pixel_white"
                                android:fontFamily="@font/pixelzone_0v6y4"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvWeeklyProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/10"
                                android:textSize="12sp"
                                android:textColor="@color/pixel_white"
                                android:fontFamily="@font/snowbell_wp4g9"
                                android:textStyle="bold"/>

                            <ImageView
                                android:id="@+id/ivWeeklyDropdownArrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_down"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llWeeklyTasksContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@color/pixel_yellow"
                            android:visibility="gone"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Action Button -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomActionSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ladybug_bottom_background"
            android:paddingTop="5dp"
            android:paddingBottom="32dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:translationY="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCameraButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/pixel_white"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvStartTaking">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/pixel_black" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvStartTaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="START TAKING"
                android:textColor="@color/pixel_white"
                android:textSize="10sp"
                android:fontFamily="@font/snowbell_wp4g9"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cvCameraButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTION!"
                android:textColor="@color/pixel_white"
                android:textSize="18sp"
                android:fontFamily="@font/snowbell_wp4g9"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvStartTaking"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/pixel_white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/pixel_black"
        app:itemTextColor="@color/pixel_black" />

</androidx.drawerlayout.widget.DrawerLayout>